    "gulp": "3.9.x",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "7.0.x",
    "gulp-sass": "4.0.x",
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "9.2.x",
    "stylelint-config-htmlacademy": "0.1.x",
    "ajv": "^6.5.0",
    "del": "3.0.0",
    "gulp-csso": "^3.0.1",
    "gulp-htmlmin": "^4.0.0",
    "gulp-imagemin": "^4.1.0",
    "gulp-posthtml": "^3.0.4",
    "gulp-rename": "^1.2.2",
    "gulp-svgmin": "^1.2.4",
    "gulp-webp": "^3.0.0",
    "pixel-glass": "^1.0.13",
    "posthtml-include": "^1.1.0",
    "run-sequence": "^2.2.1"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
